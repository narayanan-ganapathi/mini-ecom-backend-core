# ==========================================================
# üõ†Ô∏è Node.js Application
# ==========================================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ==========================================================
# üóÑÔ∏è MongoDB
# ==========================================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=secret
MONGO_INITDB_DATABASE=mydb

# App connection (using root - consider creating app-specific user)
MONGO_URI=mongodb://admin:secret@mongodb:27017/mydb?authSource=admin

# MongoDB Exporter (dedicated monitoring user)
MONGODB_EXPORTER_USER=exporter
MONGODB_EXPORTER_PASS=exporter123
MONGODB_URI=mongodb://exporter:exporter123@mongodb:27017/admin?authSource=admin

# ==========================================================
# üß± PostgreSQL
# ==========================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example
POSTGRES_DB=ecommerce
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:example@postgres:5432/ecommerce

# ==========================================================
# ‚ö° Redis
# ==========================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300  # cache time in seconds

# ==========================================================
# üìä Prometheus
# ==========================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# ==========================================================
# üìà Grafana
# ==========================================================
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==========================================================
# üìÅ Exporters
# ==========================================================
NODE_EXPORTER_PORT=9100
REDIS_EXPORTER_PORT=9121
POSTGRES_EXPORTER_PORT=9187
MONGO_EXPORTER_PORT=9216

# ==========================================================
# üß© Other Configs
# ==========================================================
CACHE_TTL=300
JWT_SECRET=mysecretjwt
APP_NAME=ecommerce-core